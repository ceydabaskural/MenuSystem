@model MenuSystem.Models.Category

@{
    ViewData["Title"] = "Kategori Düzenle";
}

<h4 >Kategori Düzenle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="CategoryId" class="form-control" type="hidden" />
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label mb-1"></label>
                <input asp-for="CategoryName" class="form-control" />
                <span asp-validation-for="CategoryName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="güncelle" class="btn btn-primary" />
                <input asp-action="Index" type="submit" value="iptal" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>
